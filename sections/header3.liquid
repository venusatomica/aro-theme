{% if section.settings.message %}
    <style>
      {% if section.settings.logo != blank %}
        .site-header__logo-image {
          max-width: {{ section.settings.logo_max_width | escape }}px;
        }
      {% endif %}
  
      {% if section.settings.align_logo == 'left' %}
        .site-header__logo-image {
          margin: 0;
        }
      {% endif %}
    </style>
  {% endif %}
  
  {%if template == 'product' %}
  <div data-secion-id="{{ section.id }}" data-section-type="header-section" class="header header--product flex items-center justify-between absolute">
    <div class="nav-back--desktop nav-element">
      <button class="btn-link btn-back">Voltar</button>
    </div>
  
    <div class="main-nav main-nav--product">
      <div class="logo-container">
        <div class="logo" role="banner">
          {% include 'logo' %}
        </div>
      </div>
    </div>
  
    <div class="nav-back--mobile nav-element">
      <button class="btn-link btn-back">Voltar</button>
    </div>
  
    <div class="minicart minicart--product nav-element">
      <a href="{{ routes.cart_url }}" class="site-header__icon site-header__cart">
        {% render 'aro-cart' %}
        <span class="icon__fallback-text">{{ 'layout.cart.title' | t }}</span>
        <div id="CartCount" class="site-header__cart-count{% if cart.item_count == 0 %} hide{% endif %}" data-cart-count-bubble>
          <span data-cart-count>{{ cart.item_count }}</span>
          <span class="icon__fallback-text medium-up--hide">{{ 'layout.cart.items_count' | t: count: cart.item_count }}</span>
        </div>
      </a>
    </div>
  </div>
  {% elsif template == 'index' %}
  <div data-section-id="{{ section.id }}" data-section-type="header-section" class="header flex items-center justify-between absolute">
    <div class="logo-home-container">
      <div class="logo" role="banner">
        {% include 'logo' %}
      </div>
    </div>
  </div>
  {% else %}
  <div data-section-id="{{ section.id }}" data-section-type="header-section" class="header header--desktop flex items-center justify-between absolute">
    <div class="sidebar-menu nav-element">
      <button class="btn-link sidebar-menu-button">Menu3</button>
      <div class="sidebar-menu-wrapper">
        {% render 'sidebar-menu' %}
      </div>
    </div>
    
   <div class="main-nav">
      <div class="nav-element flex justify-center">
        <nav class="small--hide" id="AccessibleNav" role="navigation">
          <div class="dib mr6">
            <div class="all-products-menu-wrapper">
              {% include 'all-products-menu' %}
            </div>
          </div>
          {% comment %} <button class="btn-link">Aro é Social</button> {% endcomment %}
        </nav>
   
        
        <div class="logo" role="banner">
          {% include 'logo' %}
        </div>
        
        <div class="text-right site-header__icons{% if shop.customer_accounts_enabled %} site-header__icons--plus{% endif %}">
          <div class="site-header__icons-wrapper">
            {% comment %} {% if shop.customer_accounts_enabled %}
              {% if customer %}
                <a href="{{ routes.account_url }}" class="site-header__icon site-header__account">
                  {% include 'icon-login' %}
                  <span class="icon__fallback-text">{{ 'layout.customer.account' | t }}</span>
                </a>
              {% else %}
                <a href="{{ routes.account_login_url }}" class="site-header__icon site-header__account">
                  {% include 'icon-login' %}
                  <span class="icon__fallback-text">{{ 'layout.customer.log_in' | t }}</span>
                </a>
              {% endif %}
            {% endif %} {% endcomment %}
      
            {% unless linklists[section.settings.main_linklist] == blank %}
              <button type="button" class="btn--link site-header__icon site-header__menu js-mobile-nav-toggle mobile-nav--open" aria-controls="MobileNav"  aria-expanded="false" aria-label="{{ 'layout.navigation.menu' | t }}">
                {% include 'icon-hamburger' %}
                {% include 'icon-close' %}
              </button>
            {% endunless %}
          </div>
        </div>
      </div>
    </div>
  
    <div class="minicart nav-element">
